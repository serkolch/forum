<!DOCTYPE html>
<html>
<head>
  <title>NYC Pick-Up Sports</title>
  <link rel="stylesheet" href="/css/reset.css">
  <link rel="stylesheet" href="/css/style.css">
  <link href="../css/animate.css" media="screen" rel="stylesheet" type="text/css"/>  
  <script src="https://code.jquery.com/jquery-2.1.4.js"></script>
  <script src="/js/main.js"></script>
</head>
<body>
  <div class="navigation-bar">
    <a class="home"href="/">Home</a>
    <% if @session_user %>
      <div class="register">
        <a href="/profile/<%= @session_user.id%>" class="profile"><%= @session_user.username%></a>
        <form method="POST" action="/logout">
          <input type="hidden" name="_method" value="delete">
          <input type="submit" class="logout" value="Log Out">
        </form>
      </div> <!-- register -->
    <% else %>
      <div class="register">
        <a class="signup" href="/users/new">Sign Up</a>  
        <a class="login" href="/login">Log In</a>
      </div> <!-- register -->
    <% end %>
  </div> <!-- navigation-bar -->
  <img class="layout" src="/img/header.png">
  <%= yield %>
  <!-- <div class="footer">
  </div> -->
</body>
</html>